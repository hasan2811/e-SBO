rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // This rule is intentionally permissive for the prototyping phase.
    // It allows any authenticated user to read or write any file.
    // This is crucial for client-side uploads to succeed.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
