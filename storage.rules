
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // ATURAN SANGAT TERBUKA: Izinkan semua operasi baca dan tulis oleh siapa pun.
    // Ini menghilangkan semua kemungkinan galat "permission denied" dari sisi Storage,
    // dengan asumsi CORS telah diatur dengan benar.
    match /{allPaths=**} {
      allow read, write: if true;
    }
  }
}
