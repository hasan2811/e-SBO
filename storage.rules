rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Aturan yang disederhanakan secara radikal untuk mengizinkan semua unggahan dan penghapusan file
    // bagi pengguna yang sudah terautentikasi (login).
    // Ini menyelesaikan semua masalah "getting metadata failed" dan error terkait file.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
