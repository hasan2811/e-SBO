
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // User-specific paths for uploads (observations, inspections, ptw-jsa, etc.)
    match /{path}/{userId}/{fileName} {
      // Allow read access to all, as URLs are public.
      allow read: if true;
      // Only the authenticated user can write to their own folder.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
