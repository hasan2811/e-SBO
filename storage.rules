rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Allow public read access so images can be displayed in the app.
      allow read;
      
      // Allow write access only for authenticated users.
      // This is a simplified rule for debugging. It allows any logged-in user
      // to write to any path. We will secure this further once the connection is fixed.
      allow write: if request.auth != null;
    }
  }
}
