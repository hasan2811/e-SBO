rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Files for observations and actions can be read by any authenticated user.
    // Users can only write (upload/update/delete) files to their own user-specific folder.
    match /{folder}/{userId}/{allPaths=**}
      where folder == 'observations' || folder == 'actions' {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
