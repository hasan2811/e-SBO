
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Allow public read access to all files.
    // This is needed for anyone to see images in the app.
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to upload files.
    // This rule allows any logged-in user to write to any path.
    // For higher security, you could restrict this to user-specific paths, e.g.,
    // match /{userId}/{allPaths=**} { allow write: if request.auth.uid == userId; }
    match /{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
