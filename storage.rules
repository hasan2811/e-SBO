rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default-deny all access.
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // Allow authenticated users to upload to specific paths.
    // This provides a secure base for all observation, action, and JSA uploads.
    match /{path}/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to upload to project-specific paths.
    match /projects/{projectId}/{path}/{userId}/{fileName} {
       allow read: if request.auth != null;
       allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
