rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    // Izinkan pengguna mengunggah foto observasi hanya ke path khusus pengguna mereka.
    // Ukuran file maksimum juga diberlakukan di sini sebagai lapisan keamanan tambahan.
    match /observations/{userId}/{fileName} {
      allow read: if request.auth != null; // Izinkan semua pengguna terautentikasi untuk melihat gambar
      allow write: if request.auth.uid == userId && request.resource.size < 10 * 1024 * 1024;
    }

    // Izinkan pengguna mengunggah foto tindakan perbaikan hanya ke path khusus pengguna mereka.
    match /actions/{userId}/{fileName} {
       allow read: if request.auth != null; // Izinkan semua pengguna terautentikasi untuk melihat gambar
       allow write: if request.auth.uid == userId && request.resource.size < 10 * 1024 * 1024;
    }
  }
}
