rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow any authenticated user to read and write (create, update, delete) any file.
    // This is a permissive rule for a demo environment to ensure that deleting
    // a database record can also successfully delete its associated file.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
