rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Files for new observations
    match /observations/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Files for actions taken to complete an observation
    match /actions/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
