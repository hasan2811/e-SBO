rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files, as image URLs are public.
    // Allow writes (uploads) only for authenticated users to their own user-specific paths.
    match /observations/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /actions/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
