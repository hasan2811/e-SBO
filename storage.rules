rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // This rule covers all upload paths used by the application,
    // both private and within projects. It ensures that a logged-in
    // user can only manage files inside their own user-ID-named folder.
    // This provides the absolute right for users to manage their own files.
    match /{allPaths=**}/{userId}/{fileName} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
