
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    // Helper function to check for Super Admin
    function isSuperAdmin() {
      return request.auth.uid == 'GzR8FeByeKhJ0vZoeo5Zj4M0Ftl2';
    }

    // Allow public read access to all files.
    // This simplifies displaying images in the app. Security is through unguessable URLs.
    allow read;

    // Allow writes only if the user is authenticated.
    // This rule covers paths for private items: {path}/{userId}/{filename}
    // and project items: projects/{projectId}/{path}/{userId}/{filename}
    // We only need to check if the user is who they say they are.
    match /{allPaths=**}/{userId}/{fileName} {
      allow write: if request.auth.uid == userId || isSuperAdmin();
    }
  }
}
