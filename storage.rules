
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access for all files. This is needed for the app
    // to display observation and action photos. URLs are unguessable.
    match /{allPaths=**} {
      allow read;
    }

    // Users can only write files to a folder matching their own user ID.
    // This secures uploads and prevents users from overwriting each other's files.
    match /observations/{userId}/{fileName} {
      allow write: if request.auth.uid == userId;
    }
    match /actions/{userId}/{fileName} {
      allow write: if request.auth.uid == userId;
    }
  }
}
