rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files. URLs are unguessable.
    match /{allPaths=**} {
      allow read: if true;
    }

    // Allow authenticated users to write only to a path that includes their UID.
    // This is a robust way to ensure users don't overwrite each other's files.
    // Example path: /observations/USER_ID/filename.jpg
    match /{path}/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
