rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // All paths are publicly readable for simplicity of displaying images.
    // In a production app, you might want to restrict this further.
    allow read: if true;

    // Any authenticated user can write files.
    // The security is enforced by the client-side code, which ensures
    // a user can only upload to a path containing their own UID.
    // This simplified rule avoids complex CORS preflight issues.
    match /{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
