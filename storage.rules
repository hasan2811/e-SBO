
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // PUBLIC ACCESS: Allow any authenticated user to read and write any file.
    // This is for development and diagnosis ONLY.
    // Security will be re-implemented later.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
