
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow reads and writes for any authenticated user.
    // This provides a secure baseline, ensuring only logged-in users can interact with storage.
    // We can tighten these rules later for specific paths if needed.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
