
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Default rule: Allow public read access to all files.
    // This is necessary for images to be displayed in the app.
    match /{allPaths=**} {
      allow read;
    }

    // Secure write access: Users can only write to their own designated folders.
    // The path must contain the user's UID.
    match /observations/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /inspections/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /ptw-jsa/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /actions/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
