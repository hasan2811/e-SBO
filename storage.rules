
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files. URLs are unguessable.
    allow read;

    // Users can only write files to their own user-specific directory.
    // This prevents users from overwriting each other's files.
    // e.g., matches "observations/USER_ID_123/some-file.jpg"
    match /{path}/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
