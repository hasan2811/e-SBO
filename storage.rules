rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Allow public read access. This is safe because file paths are unguessable.
      allow read;
      // Allow write access only for authenticated users. 
      // This is required for the signed URL generation to work.
      allow write: if request.auth != null;
    }
  }
}
