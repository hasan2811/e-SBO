rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Aturan untuk folder observasi
    match /observations/{userId}/{allPaths=**} {
      // Izinkan siapa saja untuk membaca file (URL tidak dapat ditebak)
      allow read;
      // Hanya izinkan pengguna yang terotentikasi untuk menulis ke folder mereka sendiri
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Aturan untuk folder tindakan
    match /actions/{userId}/{allPaths=**} {
      // Izinkan siapa saja untuk membaca file
      allow read;
      // Hanya izinkan pengguna yang terotentikasi untuk menulis ke folder mereka sendiri
      allow write: if request.auth != null && request.auth.uid == userId;
    }

  }
}
