rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access for all observation and action photos.
    // This allows the app to display images without special tokens.
    // Writes are restricted to the authenticated user who owns the directory.
    match /observations/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /actions/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
