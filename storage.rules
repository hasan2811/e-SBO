rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Restrict writes to authenticated users for their respective folders.
    // This covers both observation and action photos.
    match /{path}/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow public read access to all images so they can be displayed in the app.
    // Anyone can view the images, which is necessary for the app to function.
    match /{allPaths=**} {
      allow read;
    }
  }
}
