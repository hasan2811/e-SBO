rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files. URLs are unguessable.
    match /{allPaths=**} {
      allow read;
    }
    
    // Only allow authenticated users to write to their own designated folder.
    // This prevents users from overwriting each other's files.
    // e.g., observations/{userId}/{file_name}
    match /{path}/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
