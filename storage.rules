rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access on all files.
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to the 'observations' folder.
    // The userId in the path must match the currently signed-in user's UID.
    match /observations/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to write to the 'actions' folder.
    // The userId in the path must match the currently signed-in user's UID.
    match /actions/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
