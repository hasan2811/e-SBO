
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Allow anyone to read images, as their URLs are public in the app.
      allow read;
      // Only allow authenticated users to upload files.
      // This also implicitly protects against unauthorized deletion.
      allow write: if request.auth != null;
    }
  }
}
