rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only manage their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Observations can be created and updated by any authenticated user.
    // They can be read by any authenticated user.
    match /observations/{observationId} {
       allow get, list, create, update: if request.auth != null;
       allow delete: if false; // Generally, don't allow deletion from client
    }
  }
}
