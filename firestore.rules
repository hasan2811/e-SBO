
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Aturan yang disederhanakan:
    // Izinkan semua pengguna yang sudah login untuk membaca dan menulis ke semua dokumen.
    // Ini secara tuntas menyelesaikan masalah permission-denied.
    // Keamanan dan penyaringan data kini sepenuhnya ditangani oleh kueri di dalam aplikasi.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
