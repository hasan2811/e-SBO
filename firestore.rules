
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    match /projects/{projectId} {
      // Allow any authenticated user to see the list of projects for the "Join" dialog
      allow list: if request.auth != null;
      // Allow a user to read a specific project's details if they are a member
      allow get: if request.auth.uid in resource.data.memberUids;
      // Creation is manual, but we can allow it for authenticated users if needed later
      allow create: if request.auth != null;
      // Only the owner can update (e.g., add members) or delete the project
      allow update, delete: if request.auth.uid == resource.data.ownerUid;
    }

    // Generic rule for other collections to reduce noise during this specific fix.
    // We allow any authenticated user to read/write for now.
    match /observations/{obsId} {
      allow read, write: if request.auth != null;
    }
    match /inspections/{inspId} {
      allow read, write: if request.auth != null;
    }
    match /ptws/{ptwId} {
      allow read, write: if request.auth != null;
    }
  }
}
