
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // This rule is CRITICAL for Google Sign-In to work for new users.
    // It allows a logged-in user to create and manage their own profile document.
    match /users/{userId} {
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
    }

    // Any authenticated user can create, read, and update observations.
    // Deletion is disabled for data integrity.
    match /observations/{observationId} {
      allow create, read, update: if request.auth != null;
      allow delete: if false;
    }
  }
}
