
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // ATURAN SANGAT TERBUKA: Izinkan semua operasi baca dan tulis oleh siapa pun.
    // Ini menghilangkan semua kemungkinan galat "permission denied" dari sisi Firestore.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
