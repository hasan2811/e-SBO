
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default rule: Allow read and write access only to authenticated users.
    // This is a simple, permissive rule for development and debugging to ensure
    // that permission errors are not the cause of application failures.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
