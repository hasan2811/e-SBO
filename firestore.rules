rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles can only be created, read, or updated by their owner.
    match /users/{userId} {
      allow read, update, create: if request.auth != null && request.auth.uid == userId;
    }

    // Observations can be read by any authenticated user.
    // They can only be created if the userId in the document matches the user's auth uid.
    // Any authenticated user can update an observation (e.g., to take action).
    match /observations/{observationId} {
      allow read, update: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}
