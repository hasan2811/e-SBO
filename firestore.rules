
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow any authenticated user to perform any action.
    // This is a temporary, permissive rule for development to ensure the app's logic works.
    // We will tighten these rules for production later.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
