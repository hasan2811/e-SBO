rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Pengguna hanya dapat membaca dan memperbarui profil mereka sendiri,
    // dan membuat profil mereka saat pertama kali mendaftar.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
    }

    // Observasi dapat dibaca oleh semua pengguna yang terautentikasi.
    // Namun, hanya pengguna yang membuat observasi yang dapat membuat,
    // memperbarui, atau menghapusnya.
    match /observations/{observationId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth.uid == resource.data.userId;
    }
  }
}
