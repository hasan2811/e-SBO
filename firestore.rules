
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // ATURAN TERBUKA: Izinkan semua operasi baca dan tulis untuk semua pengguna.
    // Ini menghilangkan semua batasan keamanan untuk fokus pada fungsionalitas.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
