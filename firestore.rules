rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Aturan yang disederhanakan secara radikal untuk mengizinkan semua akses baca/tulis
    // bagi pengguna yang sudah terautentikasi (login).
    // Ini menghilangkan semua potensi error yang disebabkan oleh izin.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
