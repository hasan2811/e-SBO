rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // PERINGATAN: Aturan ini sangat longgar dan hanya untuk tujuan pengembangan.
    // Aturan ini mengizinkan semua pengguna yang sudah login untuk membaca dan menulis
    // semua data di dalam database.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
