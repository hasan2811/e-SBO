rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and update their own profile.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create; // Anyone can create a user during sign-up.
    }

    // For all other collections (observations, inspections, projects, etc.),
    // allow any authenticated user to perform read and write operations.
    // This is a permissive rule for a demo environment to ensure full functionality.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
