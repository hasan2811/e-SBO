
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Aturan paling mendasar: Izinkan baca dan tulis jika pengguna sudah login.
    // Ini menghilangkan semua kemungkinan galat izin yang kompleks sebagai langkah diagnostik.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
