rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Allow logged-in users to read/write their own user profile
    match /users/{userId} {
      allow read, update, write: if request.auth.uid == userId;
    }

    // Projects Rules - Granular permissions
    match /projects/{projectId} {
      // Allow any logged-in user to LIST projects (for Project Hub and Join Dialog)
      allow list: if request.auth != null;

      // Allow a user to GET (read a single document) a project only if they are a member
      allow get: if request.auth.uid in resource.data.memberUids;

      // Allow a user to CREATE a project if they are logged in
      allow create: if request.auth != null;

      // Allow a user to UPDATE a project only if they are the owner (e.g., for adding members)
      allow update: if request.auth.uid == resource.data.ownerUid;

      // Allow a user to DELETE a project only if they are the owner
      allow delete: if request.auth.uid == resource.data.ownerUid;
    }

    // Allow any authenticated user to create/read/update/delete items.
    // This keeps the item logic simple while projects are secured.
    match /observations/{docId} {
      allow read, write: if request.auth != null;
    }
    match /inspections/{docId} {
      allow read, write: if request.auth != null;
    }
    match /ptws/{docId} {
      allow read, write: if request.auth != null;
    }
  }
}
