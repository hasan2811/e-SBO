
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read their own profile and admins can read any profile.
    // Users can only create their own profile document and update their own.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
      // Admin override
      allow read: if request.auth != null && request.auth.uid == 'GzR8FeByeKhJ0vZoeo5Zj4M0Ftl2';
    }

    // Projects can be read by any authenticated user, which allows the client-side
    // query to filter them. Write access is restricted.
    match /projects/{projectId} {
        allow read: if request.auth != null;
        // Only the owner or an admin can modify/delete a project.
        allow update, delete: if request.auth != null && (resource.data.ownerUid == request.auth.uid || request.auth.uid == 'GzR8FeByeKhJ0vZoeo5Zj4M0Ftl2');
        allow create: if request.auth != null;
    }

    // Observations, Inspections, PTWs
    // Any authenticated user can create them.
    // They can be read/updated/deleted only by the user who created them or an admin.
    match /observations/{obsId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && (resource.data.userId == request.auth.uid || request.auth.uid == 'GzR8FeByeKhJ0vZoeo5Zj4M0Ftl2' || resource.data.scope == 'public');
    }
    
    match /inspections/{inspId} {
       allow create: if request.auth != null;
       allow read, update, delete: if request.auth != null && (resource.data.userId == request.auth.uid || request.auth.uid == 'GzR8FeByeKhJ0vZoeo5Zj4M0Ftl2');
    }

    match /ptws/{ptwId} {
       allow create: if request.auth != null;
       allow read, update, delete: if request.auth != null && (resource.data.userId == request.auth.uid || request.auth.uid == 'GzR8FeByeKhJ0vZoeo5Zj4M0Ftl2');
    }
  }
}
