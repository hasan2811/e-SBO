rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User Profiles
    // Users can read their own profile and update it.
    // They cannot read other users' profiles.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }

    // Observations
    // Any authenticated user can list (read the collection) and get (read a single document).
    // Users can only create observations if the observation's userId matches their own.
    // Users can only update an observation if they are authenticated.
    match /observations/{observationId} {
      allow get, list: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null;
    }
  }
}
