
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow any authenticated user to do anything for now.
    // This is to isolate the problem. If writes still fail,
    // the problem is NOT the rules, but the project/API configuration.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
