
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read, create, or update their own profile document.
    match /users/{userId} {
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for the observations collection
    match /observations/{observationId} {
      // Any authenticated user can create an observation.
      allow create: if request.auth != null;

      // Any authenticated user can read observations (for detail view and list view).
      allow read: if request.auth != null;

      // Any authenticated user can update an observation (e.g., to complete a task).
      allow update: if request.auth != null;
    }
  }
}
