
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Aturan ini mengizinkan semua pengguna yang sudah login (terautentikasi)
    // untuk melakukan operasi baca dan tulis pada semua dokumen.
    // Ini adalah aturan yang dilonggarkan untuk memastikan fungsi inti aplikasi berjalan.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
