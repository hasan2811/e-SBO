rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create;
    }

    match /projects/{projectId} {
      // Allow any logged-in user to see the list of projects for the "Join Project" feature.
      allow list: if request.auth != null;

      // Only allow members to read the full details of a single project.
      allow get: if request.auth.uid == resource.data.ownerUid || request.auth.uid in resource.data.memberUids;
      
      // Only the owner can add members (update memberUids) or delete the project.
      allow create, update, delete: if request.auth.uid == request.resource.data.ownerUid;
    }

    match /observations/{observationId} {
      // Public observations are readable by anyone.
      // Private/Project observations are readable only by the owner/members.
      allow get: if resource.data.scope == 'public' || (request.auth != null && request.auth.uid == resource.data.userId);
      allow list, write: if request.auth != null;
    }

    match /inspections/{inspectionId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    match /ptws/{ptwId} {
       allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
