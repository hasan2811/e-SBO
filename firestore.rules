
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Default rule: Allow operations only for authenticated users.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Explicit rule for users collection
    match /users/{userId} {
      // Users can only read and update their own profile.
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Users can create their own profile document upon signup.
      allow create: if request.auth != null;
    }
    
    // Explicit rule for projects collection
    match /projects/{projectId} {
      // Any authenticated user can create a project.
      allow create: if request.auth != null;
      // Only members of the project can read, update or delete it.
      allow read, update, delete: if request.auth != null && resource.data.memberUids.hasAny([request.auth.uid]);
    }
    
    // Explicit rules for observation, inspection, and PTW collections
    match /observations/{obsId} {
       allow read, write: if request.auth != null;
    }
    
    match /inspections/{inspId} {
       allow read, write: if request.auth != null;
    }
    
    match /ptws/{ptwId} {
       allow read, write: if request.auth != null;
    }
  }
}
